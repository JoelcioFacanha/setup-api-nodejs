{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", // Diretório de códigos typescript
    "outDir": "dist", // Diretório de saída para os arquivos compilados
    "sourceMap": true, // Gera maps de origem para facilitar o debug
    "noImplicitAny": true, // Não permite declaração de variáveis ou parametros sem tipagem
    "noImplicitReturns": true, // Verifica se todas as funções possuem tipo de retorno informado
    "noEmitOnError": true, //Não gera o código JS caso haja algum error durante o processo de compilação
    "strictNullChecks": true, //Força a verificação de valores null ou undefined
    "noUnusedLocals": true //Sinaliza quando existem variáveis declaradas e não utilizadas
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts", "node_modules/*"]
}
